#! /bin/bash

OS="$OSTYPE"
case $OS in 
    darwin*) OS="darwin" ;;
    linux*) OS="linux" ;;
    *) OS="linux" ;;
esac

OAUTH2_PROXY_VERSION="oauth2_proxy-2.2.0.$OS-amd64.go1.8.1"
OAUTH2_PROXY_NAME="$OAUTH2_PROXY_VERSION.tar.gz"

curl -L https://github.com/bitly/oauth2_proxy/releases/download/v2.2/$OAUTH2_PROXY_NAME | tar xvz


./$OAUTH2_PROXY_VERSION/oauth2_proxy -github-org betterup -config config/oauth2_proxy.cfg
